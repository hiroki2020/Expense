<div class="users-edit">
  <div class="form-container">
    <div class="form-heading">ユーザー情報の編集</div>
    <div class="form users-form">
      <div class="form-body-edit">
        <%= form_tag("/user_progates/#{@user.id}/update", {multipart: true}) do %>
          <p>画像</p>
          <input type="file" name="image">
          <p>ユーザー名</p>
          <input value="<%= @user.name %>" name="user_name">
          <p>メールアドレス</p>
          <input value="<%= @user.email %>" name="user_email">
          <p>パスワード</p>
          <input value="<%= @user.password %>" name="user_password" type="password">
          <input type="submit" value="保存" class="user-edit-button">
        <% end %>
      </div>
    </div>
  </div>
</div>