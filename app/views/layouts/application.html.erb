<!DOCTYPE html>
<html>
  <head>
    <title>Expense</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css">
  </head>

  <body>
    <header>
      <div class="header-logo">
        <% if @current_user %>
          <%= link_to("Expense","/index") %>
        <% else %>
          <%= link_to("Expense","/") %>
        <% end %>
      </div>
      <ul class="header-menus">
        <% if @current_user %>
          <li>
            <%= link_to(@current_user.name, "/user_progates/#{@current_user.id}") %>
          </li>
          <li>
            <%= link_to "支出一覧","/index" %>
          </li>
          <li>
            <%= link_to "ユーザー一覧", "/user_progates/index" %>
          </li>
          <li>
            <%= link_to "ログアウト", "/logout", {method: :post} %>
          </li>
          <li>
            <%# <%= link_to "支出を記録する", "posts/new" %>
            <%= form_tag("/posts/create") do %>     
              <input  type="text" name="content" placeholder="何に">
              <input  type="number" name="amount" placeholder="いくら">
              <input type="submit" value="記録" >
            <% end %>
          </li>
        <% else %>
          <li>
            <%= link_to "新規登録", "/signup" %>
          </li>
          <li>
            <%= link_to "ログイン", "/login" %>
          </li>
        <% end %>
      </ul>
    </header>

    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
